@namespace MyScoreBoardShared.Components
@using Microsoft.JSInterop
@inject IJSRuntime JS

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await StartWinnerCelebration();
        }
    }

    private async Task StartConfetti()
    {
        await JS.InvokeVoidAsync("startConfetti");
    }

    public async Task StartWinnerCelebration()
    {
        await JS.InvokeVoidAsync("startWinnerCelebration");
    }

    public async Task StopConfetti()
    {
        await JS.InvokeVoidAsync("stopConfetti");
    }
}
